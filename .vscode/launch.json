{
	"version": "0.2.0",
	// List of configurations. Add new configurations or edit existing ones.
	"configurations": [
		{
			"name": "Launch Client",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/client"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/client/out/**/*.js",
			],
			"preLaunchTask": "watch:client"
		},
		{
			"name": "Attach to Server",
			"type": "node",
			"request": "attach",
			"port": 6009,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/client/server/**/*.js",
			],
			"preLaunchTask": "watch:server"
		},
		{
			"name": "Jest tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/jest/bin/jest",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/client/out/**/*.js",
				"${workspaceRoot}/client/server/**/*.js"
			],
			"preLaunchTask": "compile",
			"console": "integratedTerminal"

		},
		{
			"name": "Integration Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
			  "--extensionDevelopmentPath=${workspaceRoot}/client",
			  "--extensionTestsPath=${workspaceRoot}/integration-tests/out/index",
			  "--disable-extensions",
			  "--disable-workspace-trust",
			  "${workspaceRoot}/integration-tests/project-folder"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/*/out/**/*.js",
				"${workspaceRoot}/client/server/**/*.js"
			],
			"preLaunchTask": "compile",
		  }
	],
	"compounds": [
		{
			"name": "Server/client",
			"configurations": ["Launch Client", "Attach to Server"],
			"stopAll": true,
			"preLaunchTask": "compile",
			"default": true
		}
	]
}
