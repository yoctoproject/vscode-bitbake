{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "../client/server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
		"composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
